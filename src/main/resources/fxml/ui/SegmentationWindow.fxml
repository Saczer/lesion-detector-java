<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.olszak.michal.detector.fx.scenes.segmentation.SegmentationWindow">
    <children>
        <VBox fillWidth="false" StackPane.alignment="TOP_LEFT">
            <children>
                <HBox spacing="15.0" VBox.vgrow="NEVER">
                    <children>
                        <JFXTextField fx:id="segmentationResourcesText" editable="false" labelFloat="true" promptText="Segmentation resources folder" />
                        <JFXButton buttonType="RAISED" onAction="#onOpenSegmentationFolder" prefHeight="40" prefWidth="100" styleClass="jfx-button-raised" text="OPEN" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                    </VBox.margin>
                </HBox>
                <HBox spacing="15.0" VBox.vgrow="NEVER">
                    <children>
                        <JFXTextField fx:id="segmentationDestinationText" editable="false" labelFloat="true" promptText="Segmentation destination folder" />
                        <JFXButton buttonType="RAISED" onAction="#onChooseSegmentationDestination" prefHeight="40" prefWidth="100" styleClass="jfx-button-raised" text="OPEN" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                    </VBox.margin>
                </HBox>
            </children>
            <StackPane.margin>
                <Insets bottom="200.0" left="32.0" right="32.0" top="12.0" />
            </StackPane.margin>
        </VBox>
        <VBox prefHeight="200.0" spacing="15" StackPane.alignment="TOP_LEFT">
            <children>
                <JFXButton buttonType="RAISED" onAction="#processSegmentation" prefHeight="40.0" prefWidth="200.0" styleClass="jfx-button-raised" text="SEGMENT IMAGES" />
            </children>
            <StackPane.margin>
                <Insets bottom="34.0" left="32.0" right="32.0" top="326.0" />
            </StackPane.margin>
        </VBox>
    </children>

</StackPane>
